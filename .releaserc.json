{
  "branches": ["main"],
  "verifyConditions": [
    "@semantic-release/changelog",
    "@semantic-release/github",
    "@semantic-release/git"
  ],
  "prepare": [
    "@semantic-release/changelog",
    ["@semantic-release/npm", { "npmPublish": false }],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ],
  "publish": [
    [
      "@semantic-release/exec",
      { "publishCmd": "npm publish --provenance --access public" }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/index.mjs",
            "name": "index-${nextRelease.version}.mjs"
          },
          {
            "path": "dist/index.cjs",
            "name": "index-${nextRelease.version}.cjs"
          },
          {
            "path": "dist/style.css",
            "name": "style-${nextRelease.version}.css"
          }
        ],
        "failOnMissing": false,
        "failOnDuplicateAssets": false
      }
    ]
  ],
  "addChannel": ["@semantic-release/github"],
  "analyzeCommits": "@semantic-release/commit-analyzer",
  "generateNotes": "@semantic-release/release-notes-generator"
}
